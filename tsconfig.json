{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/typings"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@pages/*": ["pages/*"],
      "@typings/*": ["typings/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "gatsby-meta-config.js", "src/utils/typography.js"],
  "exclude": ["node_modules", "public", ".cache"]
}
